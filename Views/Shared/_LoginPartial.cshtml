@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link">@UserManager.GetUserName(User)</span>
        </li>
        <li class="nav-item">
            @using (Html.BeginForm("Logout", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="nav-link btn btn-link" style="border:none; background: none;">Çıkış Yap</button>
            }
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Giriş Yap</a>
        </li>
    }
</ul>
