@{
    ViewData["Title"] = "Saç Deneme Aracı";
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saç Deneme Aracı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/sacdene.css">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body class="bg-dark text-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4 text-warning">Saç Deneme Aracı</h2>

        <form id="uploadForm" enctype="multipart/form-data" class="card shadow p-4 bg-dark text-light rounded">
            <div class="mb-3">
                <label for="hairType" class="form-label text-light">Saç Modeli:</label>
                <select id="hairType" name="hairType" class="form-select bg-dark text-light" required>
                    <option value="101">Kakül</option>
                    <option value="201">Uzun Saç</option>
                    <option value="301">Kaküllü Uzun Saç</option>
                    <option value="401">Orta Saç Yoğunluğu</option>
                    <option value="402">Hafif Saç Yoğunluğu</option>
                    <option value="403">Yoğun Saç Yoğunluğu</option>
                    <option value="502">Hafif Dalgalı</option>
                    <option value="503">Yoğun Dalgalı</option>
                    <option value="603">Kısa Saç</option>
                    <option value="801">Sarışın</option>
                    <option value="901">Düz Saç</option>
                    <option value="1001">Yağsız Saç</option>
                    <option value="1101">Saç Dökülmesi Doldurma</option>
                    <option value="1201">Düzgün Saç</option>
                    <option value="1301">Saç Arası Doldurma</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="photo" class="form-label text-light">Fotoğraf Yükle:</label>
                <input type="file" id="photo" name="photo" class="form-control bg-dark text-light" accept="image/*" required />
            </div>

            <button type="button" id="uploadButton" class="btn btn-warning w-100">Fotoğrafı Yükle ve İşle</button>
        </form>

        <div id="result" class="mt-4 text-center">
            <!-- API sonucunu burada göstereceğiz -->
        </div>
    </div>

    <script src="/js/apiIntegration.js"></script>
</body>

</html>
