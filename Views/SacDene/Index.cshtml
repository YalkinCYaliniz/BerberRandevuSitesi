@{
    ViewData["Title"] = "Saç Modeli Deneme";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="error">
        <strong>Hata:</strong> @ViewBag.ErrorMessage
    </div>
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/sacdene.css">
</head>
<body>
    <div class="container">
        <h1>Saç Modeli Deneme</h1>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="Index" asp-controller="SacDene" method="post" enctype="multipart/form-data">
            <div>
                <label for="uploadPhoto">Fotoğraf Yükleyin:</label>
                <input type="file" id="uploadPhoto" name="uploadedPhoto" accept="image/*" />
            </div>
            <div>
                <label for="hairStyle">Saç Modeli Seçin:</label>
                <select id="hairStyle" name="hairStyle">
                    <option value="">Bir saç modeli seçin</option>
                    <option value="BuzzCut">Buzz Cut</option>
                    <option value="Pompadour">Pompadour</option>
                    <option value="Afro">Afro</option>
                </select>
            </div>
            <button type="submit">Denemeye Başla</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.StyledImageUrl))
        {
            <div class="result">
                <h2>Sonuç:</h2>
                <img src="@ViewBag.StyledImageUrl" alt="Yeni Saç Modeliniz" />
            </div>
        }
    </div>
</body>
</html>
