@model BerberRandevuSitesi.Models.ApplicationUser

<h1>@Model.UserName Profil</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı Adı</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Ad</th>
        <td>@Model.ad</td>
    </tr>
    <tr>
        <th>Soyad</th>
        <td>@Model.soyad</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>Yaş</th>
        <td>@Model.yas</td>
    </tr>
    <tr>
        <th>Randevu</th>
        <td>@Model.randevusayisi adet bulunmaktadır.</td>
    </tr>
</table>
<!-- Güncelle Butonu -->
<a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary mt-3">Bilgileri Güncelle</a>

@if (Model.randevusayisi > 0)
{
    <a href="@Url.Action("RandevuGuncelle", "User", new { id = Model.Id })" class="btn btn-secondary mt-3">Randevuları Güncelle</a>
}