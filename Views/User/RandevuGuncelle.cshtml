@model IEnumerable<Randevu>
@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Şube</th>
                <th>Hizmet</th>
                <th>Çalışan</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>@randevu.Saat</td>
                    <td>@randevu.Sube.SubeAdi"</td>
                    <td>@randevu.Hizmet.HizmetAdi</td>
                    <td>@randevu.Calisan.Adi @randevu.Calisan.Soyadi</td>
                    <td>
                        <form method="post" action="@Url.Action("Delete", "User", new { id = randevu.ID })" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Randevunuz bulunmamaktadır.</p>
}
