@model BerberRandevuSitesi.Models.Subeler

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şube Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Yeni Şube Ekle</h1>
        <form asp-action="Ekle" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                    <label asp-for="SubeAdi" class="control-label"></label>
                    <input asp-for="SubeAdi" class="form-control"/>
                    <span asp-validation-for="SubeAdi" class="text-danger"></span>
                </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
            <a href="/Subeler" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</body>
</html>
