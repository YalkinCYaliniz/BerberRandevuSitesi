@model IEnumerable<BerberRandevuSitesi.Models.Subeler>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şubeler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/kullanicilar.css" rel="stylesheet"> <!-- CSS dosyası bağlantısı -->
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Şube Listesi</h1>
        <a asp-controller="Subeler" asp-action="Ekle" class="btn btn-success mb-3">Yeni Şube Ekle</a>
        <table class="table table-sm table-bordered custom-table">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>Şube Adı</th>
                    <th>Çalışanlar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var sube in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@sube.SubeAdi</td>
                            <td>
                                @if (sube.Calisanlar != null && sube.Calisanlar.Any())
                                {
                                    <ul>
                                        @foreach (var calisan in sube.Calisanlar)
                                        {
                                            <li>@calisan.Adi @calisan.Soyadi</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>Çalışan yok</span>   
                                }
                            </td>
                            <td>
                                <form asp-action="Sil" asp-route-id="@sube.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Kayıtlı şube bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
