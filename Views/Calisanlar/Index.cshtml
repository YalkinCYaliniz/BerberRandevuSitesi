@model IEnumerable<BerberRandevuSitesi.Models.Calisanlar>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışanlar Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/kullanicilar.css" rel="stylesheet"> <!-- CSS dosyası bağlantısı -->
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Çalışan Listesi</h1>
        <!-- Yeni Çalışan Ekle Butonu -->
        <a href="@Url.Action("Ekle", "Calisanlar")" class="btn btn-success mb-3">Yeni Çalışan Ekle</a>

        <table class="table table-sm table-bordered custom-table">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Şube Adı</th>
                    <th>Yetenekler</th>
                    <th>Maaş</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calisan in Model)
                {
                    <tr>
                        <td>@calisan.Adi</td>
                        <td>@calisan.Soyadi</td>
                        <td>@calisan.Sube.SubeAdi</td>
                        <td>
                            @foreach (var yetenek in calisan.CalisanYetenekler)
                            {
                                <span>@yetenek.Hizmet.HizmetAdi</span><br />
                            }
                        </td>
                        <td>@calisan.Maas.ToString("C")</td>
                        <td>
                            <!-- Düzenle Butonu -->
                            <a href="@Url.Action("Duzenle", "Calisanlar", new { id = calisan.CalisanId })" class="btn btn-warning btn-sm">Düzenle</a>

                            <!-- Sil Butonu -->
                            <form action="@Url.Action("Sil", "Calisanlar", new { id = calisan.CalisanId })" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
