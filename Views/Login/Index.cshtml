@{
    ViewData["Title"] = "Giriş Yap";
}
@model Musteri
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet"> <!-- CSS dosyası bağlantısı -->
</head>
<body>
    <div class="login-container d-flex justify-content-center align-items-center vh-100">
        <div class="login-card p-4 shadow-lg rounded">
            <h2 class="text-center mb-4">Giriş Yap</h2>
            <form  asp-controller="Login" asp-action="Index">
                <!-- E-posta -->
                <div class="mb-3">
                    <label asp-for="mailadress" class="control-label"></label>
                    <input asp-for="mailadress" class="form-control"/>
                    <span asp-validation-for="mailadress" class="text-danger"></span>
                </div>
                <!-- Şifre -->
                <div class="mb-3">
                    <label asp-for="sifre" class="control-label"></label>
                    <input type ="password" asp-for="sifre" class="form-control"/>
                    <span asp-validation-for="sifre" class="text-danger"></span>
                </div>

                <!-- Butonlar: Giriş Yap ve Kayıt Ol -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark">Giriş Yap</button>
                    <a href="/Register" class="btn btn-outline-dark">Kayıt Ol</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}